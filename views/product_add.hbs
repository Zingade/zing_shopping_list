<div class="col-md-4 offset-md-4 top-pad-100">
	<form action="/admin/product_add" method="post" enctype="multipart/form-data" role="form" data-toggle="validator">
		<h2 class="form-signin-heading">New Item to be included</h2>
		<div class="form-group">
            <label for="productName" class="control-label">Product Name*:</label>
			<input type="itemName" id="itemName" name="itemName" class="form-control" placeholder="item Name" required autofocus>
		</div>
		<div class="form-group">
            <label for="productPrice" class="control-label">Product Price*:</label>
			<input type="itemPrice" id="itemPrice" name="itemPrice" class="form-control" placeholder="item Price" required autofocus>
		</div>
        <div class="col-12">
            <div class="form-group">
                <label for="productDescription" class="control-label">Product description *</label>
                <textarea minlength="5" rows="10" id="productDescription" name="productDescription" class="form-control" required></textarea>
            </div>
        </div>
        <input type="file" name="myImage" accept="image/*">
		<button class="btn  btn-outline-primary btn-block" id="addItem" type="submit">Add Item</button>
	</form>
</div>

